<Page x:Class="Restaurant.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Page2">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,29,0,0" TextWrapping="Wrap" Text="Select your sandwich" VerticalAlignment="Top"/>
        <RadioButton Name="hotdogRB" Content="Hot Dog" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton Name="hamRB" Content="Hamburger" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="filletRB" Content="Fillet" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <RadioButton Name="chickenRB"  Content="Chicken with rice" HorizontalAlignment="Left" Margin="10,102,0,0" VerticalAlignment="Top" Visibility="Hidden"/>

    </Grid>
</Page>
